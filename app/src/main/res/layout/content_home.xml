<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gmonetix.bookspivot.activity.Home"
    tools:showIn="@layout/app_bar_home">

    <!--<com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/home_pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/bglogin2"
        android:scaleType="center"
        android:foreground="#d0e51c23"/>
        <TextView
            android:layout_width="wrap_content"
android:text="My Information"
            android:id="@+id/my_info"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_below="@id/my_info"
            android:layout_width="100dp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/account_pic"
            android:layout_height="100dp"
            android:src="@drawable/pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Guest User"
            android:id="@+id/my_name"

            android:textStyle="normal"
android:layout_below="@id/account_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"

            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_above="@id/books"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:id="@+id/book_no"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Books"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#f3f3f3"
            android:id="@+id/books"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f3f3f3"
            android:textSize="20sp"
            android:text="Downloads"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/downloads"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/download_no"
            android:textSize="25sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_above="@id/downloads"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="2789"/>

    </RelativeLayout>
</LinearLayout>
